<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC">
				<property name="" value="" />
			</transactionManager>
			<!-- 配置数据库连接信息 -->
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url"
					value="jdbc:mysql://127.0.0.1:3306/mybatis_study?characterEncoding=utf8" />
				<property name="username" value="root" />
				<property name="password" value="" />
			</dataSource>
		</environment>
	</environments>

	<!-- 注册userMapper.xml文件， userMapper.xml位于com.lqyhmb.mapping这个包下，所以resource写成com/lqyhmb/mapping/userMapper.xml -->
	<mappers>
		<mapper resource="com/lqyhmb/mapping/userMapper.xml" />
	</mappers>

</configuration>